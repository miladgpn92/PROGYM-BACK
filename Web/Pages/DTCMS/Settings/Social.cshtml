@page
@model SocialModel
@inject IStringLocalizer<ResourceLibrary.Panel.Admin.Settings.Settings> Localizer;
@inject IStringLocalizer<ResourceLibrary.Panel.Common.Global.Global> GlobalLocalizer;
@{
    List<SelectListItem> selectListItems = new List<SelectListItem>();
    selectListItems.Add(new SelectListItem()
            {
                Text = Localizer["Title"],
                Value = "/dtcms/settings"
            });
    selectListItems.Add(new SelectListItem()
            {
                Text = Localizer["SocialNetworksTitle"],
                Value = "#"
            });
    ViewData["TitleList"] = selectListItems;
    ViewData["Title"] = Localizer["Title"] + " " + Localizer["SocialNetworksTitle"];
    Layout = "_DashLayout";
    ViewBag.HasBottomSheetMenu = false;
}

<form method="post">
    <main>
        <div class="rlt:text-right ltr:text-left">
            <div class="mb-6">
                <dt:input-text asp-for="Items.EitaLink"></dt:input-text>
            </div>
            <div class="mb-6">
                <dt:input-text asp-for="Items.BaleLink"></dt:input-text>
            </div>
            <div class="mb-6">
                <dt:input-text asp-for="Items.AparatLink"></dt:input-text>
            </div>

            <div class="mb-6">
                <dt:input-text asp-for="Items.InstagramLink"></dt:input-text>
            </div>

            <div class="mb-6">
                <dt:input-text asp-for="Items.FacebookLink"></dt:input-text>
            </div>


            <div class="mb-6">
                <dt:input-text asp-for="Items.LinkeinLink"></dt:input-text>
            </div>
            <div class="mb-6">
                <dt:input-text asp-for="Items.TelegramLink"></dt:input-text>
            </div>

            <div class="mb-6">
                <dt:input-text asp-for="Items.TwitterLink"></dt:input-text>
            </div>

            <div class="mb-6">
                <dt:input-text asp-for="Items.YoutubeLink"></dt:input-text>
            </div>
        </div>

        <button type="button"
                class="text-center w-full text-white bg-green-400 hover:bg-green-500 focus:ring-4 focus:outline-none focus:bg-green-500 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex dark:focus:ring-[#3b5998]/55  mb-2 items-center flex justify-center">
            @GlobalLocalizer["SaveChanges"]
        </button>

    </main>

</form>