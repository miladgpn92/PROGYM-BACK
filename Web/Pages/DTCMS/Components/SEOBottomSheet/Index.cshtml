@model SEOBottomSheetViewModel
@inject IStringLocalizer<ResourceLibrary.Panel.Common.Global.Global> GlobalLocalizer;

<dt:bottom-sheet id="seo__bottomsheet" min-height="100" disable-drag="true" title="@GlobalLocalizer["SEO"]" Level="2">
    <div class="h-screen">

        <div class="mb-10">
            <dt:input-text asp-for="@Model.SEOTitle" name="Items.SeoTitle" target-class="seo__title" has-slug="false" has-counter="true" counter-target="seo__title__counter"></dt:input-text>
            <div class="flex items-center justify-between w-full mt-2">
                <span class="font-light text-xs text-gray-700 w-full inline-block text-right ltr:text-left">
                    @GlobalLocalizer["SEOTitleMaxLenght"]
