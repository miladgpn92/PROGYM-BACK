                <span class="font-light text-xs text-gray-700 w-full inline-block text-left ltr:text-right">
                    <b> <span class="seo__title__counter">0</span>/60</b>
                </span>
            </div>
        </div>

        <div class="mb-8">
            <dt:text-area asp-for="@Model.SEODesc" target-class="seo__desc" has-slug="false" has-counter="true" counter-target="seo__desc__counter"></dt:text-area>
