@model Web.Pages.DTCMS.Components.CategoryMaker.CategoryMakerDto
@inject IStringLocalizer<ResourceLibrary.Panel.Common.Global.Global> GlobalLocalizer;
@inject IStringLocalizer<ResourceLibrary.Resources.ErrorMsg.ErrorMsg> ErrorMsg;

<h5 class="text-center text-gray-900 text-base font-semibold leading-normal">
    @if(Model.PageTitle == null)
    {
          @GlobalLocalizer["Submit", ""]
    }
    else
    {
          @GlobalLocalizer["Submit", Model.PageTitle]
    }
   </h5>
<button class="dismisser__cat__btn opacity-0 p-0 m-0 h-0 w-0 border-0" data-sheet-dismiss></button>
<input oninput="removeCatError(this)" data-max-length="@ErrorMsg["MaxLenMsg",GlobalLocalizer["Title"],"60"]"
    data-required="@ErrorMsg["RequierdMsg",GlobalLocalizer["Title"]]" type="text"
    class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm text-right ltr:text-left "/>
<span class=" hidden text-xs font-light text-red-600 -mt-2.5"></span>
<div class=" py-6 justify-between items-center flex">
    <button onclick="createCat(this)"
        class="px-[17px] py-[9px] bg-emerald-400 rounded-md shadow justify-center items-center flex text-center text-white text-sm font-normal  leading-tight">
        @GlobalLocalizer["Submit", ""]
    </button>
    <div class="text-gray-600 text-sm font-normal  leading-tight cursor-pointer" data-sheet-dismiss>
        @GlobalLocalizer["Cancel"]</div>

</div>
