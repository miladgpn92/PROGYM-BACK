        <div class="mt-6">
        <div>
        <div class="relative flex justify-center text-sm rtl:text-right ltr:text-left">

        @Localizer["RegisterText"]<a href="/auth/register"
        class="mx-3 text-blue-600">
        @Localizer["RegisterLink"]
        </a>
        </div>
        </div>
        </div>*@
    </div>
</main>