@page
@model IndexModel
@inject IStringLocalizer<ResourceLibrary.Panel.Common.Auth.Login.Login> Localizer;
@{
    ViewData["Title"] = @Localizer["PageTitle"];
    Layout = "_AuthLayout";
}
<main>
    <div class="font-extrabold text-[26px] mx-6 text-gray-900">
        @Localizer["Title"]
    </div>

    <div class="my-4">
        <div class="text-indigo-600 font-normal text-sm mx-6">
            @Localizer["Subtitle"]
        </div>
    </div>
    <div class="mx-2 bg-white py-8 px-4 shadow sm:px-10">
        <form class="space-y-6" method="post">
            <div>
                <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative"></div>
            </div>
            <div>
                <div class="mt-3">
                    <dt:input-text asp-for="AuthDto.username" text-align="TextAlign.Left" dir="TextDirection.ltr"></dt:input-text>
                </div>
                <div class="mt-3">
                    <dt:input-text asp-for="AuthDto.password" type="InputsType.Password"></dt:input-text>
                </div>
                <recaptcha />
            </div>

            <div class="my-6  rtl:text-right ltr:text-left">

                <a href="/auth/forgotpassword"
                   class="text-indigo-600 text-sm font-normal">
                    @Localizer["ForgotPassword"]
                </a>
            </div>

            <div>
                <button class="w-full flex justify-center py-[9px] px-4 border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600">
                    @Localizer["Button"]

                </button>
            </div>
        </form>
